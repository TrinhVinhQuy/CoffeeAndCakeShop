@model CoffeeAndCakeShop.Entities.Order

<div>
    <h4>Thông tin khách hàng</h4>
    <p><strong>Khách hàng:</strong> @Model.ApplicationUser?.UserName</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.Address, @Model.Town, @Model.District, @Model.Province</p>
    <p><strong>Ngày tạo:</strong> @Model.CreateOn.ToString("dd/MM/yyyy")</p>
    <p><strong>Trạng thái:</strong> @Model.StatusProcessing</p>
</div>

<hr />

<h4>Sản phẩm trong đơn hàng</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.UnitPrice.ToString("N0") đ</td>
                <td>@item.Quanlity</td>
                <td>@((item.UnitPrice * item.Quanlity).ToString("N0")) đ</td>
            </tr>
        }
    </tbody>
</table>

<h5><strong>Tổng cộng:</strong> @Model.TotalAmount.ToString("N0") đ</h5>
<button class="btn btn-success" onclick="completeOrder('@Model.Id')">Hoàn thành đơn hàng</button>

